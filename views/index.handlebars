<h1>Burgers!</h1>

<h2>New Burger Order</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
    <button type="button" class="eatburger btn btn-warning" id ="eatenBurgerbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"></button><hr>
   {{/unless}}
   {{/each}}
</ul>

