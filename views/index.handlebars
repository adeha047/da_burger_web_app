<h1>Burgers!</h1>

<h2></h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger name:</label>
    <input type="text" id="newBurger" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form> 

<h2>New Burger Order</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
    <button type="button" class="eatburger btn btn-warning" id ="eatBurgerbutton" data-id="{{this.id}}" data-devouredState="{{devoured}}"> Ready to Eat</button><hr>
   {{/unless}}
   {{/each}}
</ul>

<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
    	<button class="delete-button" data-id="{{id}}">DELETE</button>
    {{/if}}
  {{/each}}
</ul>

